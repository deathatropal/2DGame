package basics;

import java.awt.Graphics;
import java.awt.Graphics2D;
import java.awt.Image;

public class Block extends Coordinates
{
	public Image image;
	
	public Block(int x, int y)
	{
		this.x = x;
		this.y = y;
	}
	
	public boolean canMoveUp(Player player, int imageHeight, int imageWidth, double futureMoveY)
	{
		if(player.dx > 0 && player.x + imageWidth < x && futureMoveX + imageWidth > x && player.y <= y && player.y >= y + imageHeight)
		{
			return false;
		}	
		else if(player.dx < 0 && player.x > x && futureMoveX < x && player.y <= y && player.y >= y + imageHeight)
		{
			return false;
		}
		return true;
	}
	
	public boolean canMoveDown(Player player, int imageHeight, int imageWidth, double futureMoveY)
	{
		if(player.dx > 0 && player.x + imageWidth < x && futureMoveX + imageWidth > x && player.y <= y && player.y >= y + imageHeight)
		{
			return false;
		}	
		else if(player.dx < 0 && player.x > x && futureMoveX < x && player.y <= y && player.y >= y + imageHeight)
		{
			return false;
		}
		return true;
	}
	
	public boolean canMoveRight(Player player, int imageHeight, int imageWidth, double futureMoveX)
	{
		if(player.dx > 0 && player.x + imageWidth < x && futureMoveX + imageWidth > x && player.y <= y && player.y >= y + imageHeight)
		{
			return false;
		}	
		else if(player.dx < 0 && player.x > x && futureMoveX < x && player.y <= y && player.y >= y + imageHeight)
		{
			return false;
		}
		return true;
	}
	
	public boolean canMoveLeft(Player player, int imageHeight, int imageWidth, double futureMoveX)
	{
		if(player.dx > 0 && player.x + imageWidth < x && futureMoveX + imageWidth > x && player.y <= y && player.y >= y + imageHeight)
		{
			return false;
		}	
		else if(player.dx < 0 && player.x > x && futureMoveX < x && player.y <= y && player.y >= y + imageHeight)
		{
			return false;
		}
		return true;
	}
	
	public void draw(Graphics graphics, Screen screen)
	{
		Graphics2D graphics2 = (Graphics2D) graphics;
		graphics2.drawImage(image, x, y, screen);
	}
}
